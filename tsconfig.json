{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.integration.test.ts",
    "**/*.integration.test.tsx",
    "**/*.int.test.ts",
    "**/*.int.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/playwright/**/*",
    "__tests__/__mocks__/**/*",
    "playwright.config.ts"
  ]
}
