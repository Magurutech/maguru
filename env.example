# Environment Configuration - Development Template
# Copy this file to .env.local for development



# Application Environment
NODE_ENV=development
APP_ENV=dev
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# Clerk Authentication
# Get these from: https://dashboard.clerk.com/apps/[your-app]/api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here


# Force redirect - ALWAYS redirect to these URLs after sign up/in
# This will override any redirect_url query parameter
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard

# Fallback redirect - used when no redirect_url is present in query
# This is used if user navigates directly to sign-in/sign-up
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/maguru_dev"
DIRECT_URL="postgresql://username:password@localhost:5432/maguru_dev"

# Testing Configuration (development only)
CLERK_TEST_MODE=true
CLERK_DISABLE_BOT_PROTECTION=false
