# E2E_CLERK_USER_EMAIL=existing+clerk_test@example.com
# E2E_CLERK_USER_PASSWORD=ardi14mei2005

E2E_CLERK_USER_USERNAME=eviewnicks
E2E_CLERK_USER_EMAIL=eviewnicks@gmail.com
E2E_CLERK_USER_PASSWORD=ardi14mei2005

# Optional: Additional test users untuk role-based testing  
